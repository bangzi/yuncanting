/* pages/orderlist/orderlist.wxss */

.conmentview {
    display: flex;
    flex-direction: column;
    margin: 10rpx;
    /* background-color: red; */
}

.orderConment {
    border-bottom: 1px solid #dadada;
}

.inshop {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.inshop .where {
    font-size: 20px;
    color: #444444;
    margin-top: 10rpx;
    margin-left: 10px;
}

.inshop .payState {
    padding: 10rpx;
    /* border: 1px solid #dadada; */
    font-size: 20px;
    color: #444444;
}

.information {
    margin: 15rpx;
}

.information .foodname {
    display: flex;
    justify-content: space-between;
    color: #444444;
     margin-left: 4px; 
}

.foodname .foodnum {
    margin-left: 15px;
    color: #444444;
}
.counttotal {
    display: flex;
    margin-top: 15px;
    justify-content: flex-end;
    color: #444444;
}
